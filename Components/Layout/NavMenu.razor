@inject VillageRMS.Services.LoginStateService LoginStateService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">VillageRMS</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3 bii-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house fs-5 mb-4" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (LoginStateService.IsLoggedIn) //limit menu visiblity
        {
            <div class="bii-item">
                <NavLink class="nav-link" href="rentals">
                    <span class="bi bi-card-checklist fs-5 mb-4" aria-hidden="true"></span> Rentals
                </NavLink>
            </div>
            <div class="nav-item px-3 bii-item">
                <NavLink class="nav-link" href="rental-equipment">
                    <span class="bi bi-wrench-adjustable-circle fs-5 mb-4" aria-hidden="true"></span> Rental Equipment
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="customers">
                    <span class="bi bi-people fs-5 mb-4" aria-hidden="true"></span> Customers
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="categories">
                    <span class="bi bi-tools fs-5 mb-4" aria-hidden="true"></span> Rental Categories
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                    <span class="bi bi-file-earmark-spreadsheet fs-5 mb-4" aria-hidden="true"></span> Reports
            </NavLink>
        </div>
        }
    </nav>
</div>


@code {
    //handle state changes
    protected override void OnInitialized()
    {
        LoginStateService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        LoginStateService.OnChange -= StateHasChanged;
    }
}